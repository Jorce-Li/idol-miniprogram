/**index.wxss**/
page{
  background-color: #fff;
}
view{
  box-sizing: border-box;
}
.cardList{
}
.cardItme{
  padding-bottom: 30rpx;
}
.user-information{
  display: flex;
  align-items: center;
  height: 120rpx;
  width: 100%;
  position: relative;
}
.user-information-userName{
  margin-left: 30rpx;
  font-family: bold;
  font-size: 28rpx;
  flex: 1;
}
.user-information-action{
  position: absolute;
  width: 60rpx;
  line-height: 40rpx;
  right: 30rpx;
  text-align: right;
  top: 50%;
  font-size: 80rpx;
  letter-spacing: 4rpx;
  transform: translateY(-50%);
  color: #787878;
}
.user-information-avatar{
  margin-left: 30rpx;
  width: 75rpx;
  height: 75rpx;
  border-radius: 50%;
}
image{
  width: 100%;
}
.article-swiper{
  width: 100%;
  height: 800rpx;
}
.article-swiper image{
  height: 800rpx;
}
.t-left{
  text-align: left;
}
.marginb-20{
  margin-bottom: 20rpx;
}
.f-bold{
  font-weight: 200;
  text-align: center;
}
.article-container{
  background-color: #fff;
  border-radius: 30rpx;
}
.article-comments{
  background-color: #fff;
}
.article-comment-row{
  display: grid;
  grid-template-columns: 150rpx auto;
}
.avatar{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #eee;
  margin-left: 20rpx;
}
.comments{
  border-bottom: 1px solid #eee;
}
.loading{
  display: flex;
  justify-content: center;
}
.color{
  margin-right: 10rpx;
  width: 30rpx;
  height: 50rpx;
  background-color: pink;
}
.article-actions{
  display: flex;
  align-items: center;
  height: 80rpx;
  position: relative;
}
.icon-love{
  width: 50rpx;
  height: 50rpx;
  margin-left: 30rpx;
}
.icon-comment{
  width: 45rpx;
  height: 45rpx;
  margin-left: 30rpx;
}
.icon-collect{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}
.icon-send{
  width: 60rpx;
  height: 60rpx;
  margin-left: 25rpx;
}
.article-comment{
  display: flex;
  align-items: center;
  padding: 5rpx 30rpx;
}
.article-userName{
  margin-right: 10rpx;
  font-size: 26rpx;
  font-weight: bold;
}
.article-user-comment{
  font-size: 28rpx;
}
.article-comment-number{
  padding: 5rpx 30rpx;
  color: #787878;
  font-size: 28rpx;
}
.article-date{
  padding: 5rpx 30rpx;
  color: #787878;
  font-size: 20rpx;
  letter-spacing: 1rpx;
}
.article-like-number{
  padding: 5rpx 30rpx;
  margin-right: 10rpx;
  font-size: 26rpx;
  font-weight: bold;
}