<view class="container">
  <view class="article-container ">
    <swiper class="article-swiper" indicator-dots="{{true}}"
        autoplay="{{false}}" interval="{{300}}" duration="{{300}}">
      <block wx:for="{{imgData}}" wx:key="index" wx:for-index="index">
        <swiper-item>
          <image src="{{item.src}}" mode="aspectFill" />
        </swiper-item>
      </block>
    </swiper>
   
    <view class="f-bold p-10">标签: 裴珠泫</view>
    <view class="loading f-bold marginb-20 p-10">
      <view class="color"></view>
      <view class="color"></view>
      <view class="color"></view>
      <view class="color"></view>
    </view>
  </view>
  <view class="article-comments">
    <view class="f-bold p-10">
      详情
    </view>
