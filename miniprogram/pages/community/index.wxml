      <view class="avatar flex-row-center" style="background:{{item.background}}">{{item.avatar}}</view>
      <view class="comments flex-col-start">
        <view class="comments-title m-bottom-5">{{item.title}}</view>
        <view class="comments-content m-bottom-5">{{item.content}}</view>
      </view>
    </view> -->
  </view>
</view>
