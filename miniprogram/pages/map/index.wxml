<!--index.wxml-->
<view class="map">
  <map
    id="map"
    longitude="{{center.longitude}}" 
    latitude="{{center.latitude}}" 
    scale="14" 
    bindcontroltap="controltap"
    bindmarkertap="markertap"
    polyline="{{polyline}}"
    bindregionchange="regionchange"
    show-location
    style="width: 100%; height: 100vh"
  />
</view>
